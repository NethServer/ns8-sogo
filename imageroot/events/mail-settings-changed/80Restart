import json
import sys
import agent
import os

event = json.load(sys.stdin)

if event['module_uuid'] == os.getenv('MAIL_SERVER', ''):
   # Restart to apply changed settings
   agent.run_helper("systemctl", "--user", "try-restart", "sogo.service").check_returncode()